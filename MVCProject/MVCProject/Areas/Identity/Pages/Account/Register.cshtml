@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row align-items-center mb-3">
                <div class="col">
                    <h2>Create a new account</h2>
                </div>
                <div class="col-auto">
                    <a asp-controller="Account" asp-action="Index" class="btn btn-primary mb-1">Terug naar accountlijst</a>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Voornaam" class="form-control" aria-required="true" />
                <label asp-for="Input.Voornaam"></label>
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Achternaam" class="form-control" aria-required="true" />
                <label asp-for="Input.Achternaam"></label>
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Gebruikersnaam" class="form-control" aria-required="true" />
                <label asp-for="Input.Gebruikersnaam"></label>
                <span asp-validation-for="Input.Gebruikersnaam" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
                <h4>Rollen</h4>
                <div class="form-check">
                    <input asp-for="Input.Leerkracht" type="checkbox" class="form-check-input" />
                    <label asp-for="Input.Leerkracht" class="form-check-label">Leerkracht</label>
            </div>
            <div class="form-check">
                <input asp-for="Input.SecretariaatsMedewerker" type="checkbox" class="form-check-input" />
                <label asp-for="Input.SecretariaatsMedewerker" class="form-check-label">Secretariaatsmedewerker</label>
            </div>
                <div class="form-check">
                    <input asp-for="Input.Coordinator" type="checkbox" class="form-check-input" />
                    <label asp-for="Input.Coordinator" class="form-check-label">Coordinator</label>
                </div>
            <div class="form-check">
                    <input asp-for="Input.Directie" type="checkbox" class="form-check-input" />
                <label asp-for="Input.Directie" class="form-check-label">Directie</label>
                </div>
            <div class="form-check">
                <input asp-for="Input.Beheerder" type="checkbox" class="form-check-input" />
                <label asp-for="Input.Beheerder" class="form-check-label">Beheerder</label>
            </div>
            
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
