@using MVCProject.ViewModels.HomeViewModels

@model LoginViewModel


<h1 class="display-5 mt-4">Log in</h1>
<h3>Gebruik een geldig account om in te loggen.</h3>
<div class="row">
    <div class="col">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control w-100" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control w-100" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="logoBus col">
        <h2 class="display-3">EduVisits</h2>
        <img src="~/school-bus-5227091_1280.png" alt="schoolbus" />
        @*Image by <a href="https://pixabay.com/users/katillustrationlondon-10871763/?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=5227091">Katherine Ab</a> from <a href="https://pixabay.com//?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=5227091">Pixabay</a> *@

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
