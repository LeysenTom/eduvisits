@model MVCProject.ViewModels.AfwezigheidViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="display-5 mt-4">Details afwezigheid</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gebruiker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gebruiker.Voornaam)
            @Html.DisplayFor(model => model.Gebruiker.Naam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EindDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EindDatum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Wijzigen</a>
    <a asp-action="Index" class="btn btn-primary">Terug naar hoofdmenu</a>
</div>
