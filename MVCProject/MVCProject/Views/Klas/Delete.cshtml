@model MVCProject.ViewModels.KlasViewModels.KlasViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen klas</h1>
<h3>Ben je zeker dat je wilt verwijderen?</h3>
<a asp-action="Index" class="btn btn-primary mb-3">Terug naar klassenlijst</a>
<div>
    <h4>Klas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Verwijderd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Verwijderd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
    </form>
</div>
